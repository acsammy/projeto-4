{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach Node.js",
      "processId": "${command:PickProcess}",
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "program": "${workspaceFolder}/src/pages/index.jsx",
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ],
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
